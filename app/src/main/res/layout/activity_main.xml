<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.neutrino.maze.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ToggleButton
                android:id="@+id/tb_edit_mode"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:textOn=""
                android:textOff=""
                android:alpha="0.75"
                android:drawableTop="@drawable/ic_mode_edit_white_24dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_wall_length"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="(_!_)"/>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_find_me_on_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        android:alpha="@dimen/alpha_default"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_gps_fixed_white_24dp"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_delete_wall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="@dimen/alpha_default"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_clear_white_24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_wall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:alpha="@dimen/alpha_default"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_set_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:alpha="@dimen/alpha_default"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_center_focus_strong_white_24dp"
        android:layout_marginBottom="155dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_map_autobuilder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:alpha="@dimen/alpha_default"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_directions_walk_white_24dp"
        android:layout_marginBottom="225dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_map_autobuilder_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:alpha="@dimen/alpha_default"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_directions_walk_left_wall_white_24dp"
        android:layout_marginBottom="235dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="85dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="@dimen/fab_margin"
        app:fabSize="mini"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_map_autobuilder_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:alpha="@dimen/alpha_default"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_directions_walk_right_wall_white_24dp"
        android:layout_marginBottom="235dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="135dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginLeft="135dp"
        android:layout_marginRight="@dimen/fab_margin"
        app:fabSize="mini"/>

</android.support.design.widget.CoordinatorLayout>
